{
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-plusplus": 0,
    "eol-last": [
      "error",
      "always"
    ],
    "class-methods-use-this": "off",
    "curly": [
      "error",
      "all"
    ]
  },
  "globals": {
    "expect": true
  }
}
